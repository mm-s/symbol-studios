#!/bin/bash

gitBzCore="https://github.com/nemtech"
gitCore="symbol-sdk-core-cpp"

gitBzRpc="https://github.com/nemtech"
gitRpc="symbol-sdk-cpp"

gitBzSkel="file:///home/marc-os"
gitSkel="symbol-skel-cpp"

function help {
	echo "$0 commands"
	echo "	clean - delete ganerated files."
	echo "	bootstrap - Clone here the SDK repositories."
	echo "	sync - call scripts/sync on each project"
	echo "	       Cascade transmitting Find*.cmake modules. core -> rpc[FindSymbolCore.cmake] - >skel[FindSymbolCore.cmake, FindSymbolRPC.cmake]"
	echo "	test_build - builds marc-os branch"
}

function sync {
	echo "WARNING. branch marc-os will be pushed for all reps. Ok or CTL-C Abort."
	read yes

	echo "calling sync.sh on rpc"
	pushd rpc > /dev/null
		scripts/sync.sh "marc-os"
		git push
	popd > /dev/null
	echo "calling sync.sh on skel"
	pushd skel > /dev/null
		scripts/sync.sh "marc-os"
		git push
	popd > /dev/null
}

function bootstrap {
	branch=$1
	if [[ "_${branch}" == "_" ]]; then
		branch="marc-os"
	fi
	if [[ ! -d $gitCore ]]; then
		echo "git clone -b ${branch} ${gitBzCore}/$gitCore"
		git clone -b ${branch} ${gitBzCore}/$gitCore
	fi
	if [[ ! -d ${gitRpc}2 ]]; then
		echo "git clone -b ${branch} ${gitBzRpc}/$gitRpc ${gitRpc}2"
		git clone -b ${branch} ${gitBzRpc}/$gitRpc ${gitRpc}2
	fi
	if [[ ! -d $gitSkel ]]; then
		echo "git clone -b ${branch} ${gitBzSkel}/$gitSkel"
		git clone -b ${branch} ${gitBzSkel}/$gitSkel
	fi
}

function clean {
	rm -rf $gitCore
	rm -rf $gitRpc
	rm -rf $gitSkel
}

cmd=$1
shift

if [[ "_$cmd" == "_clean" ]]; then
	clean "$@"
	exit 0
fi
if [[ "_$cmd" == "_bootstrap" ]]; then
	bootstrap "$@"
	exit 0
fi
if [[ "_$cmd" == "_sync" ]]; then
	sync "$@"
	exit 0
fi
if [[ "_$cmd" == "_test_build" ]]; then
	pushd core/test >/dev/null
		bin/e2e -j 8 marc-os
	popd > /dev/null
	exit 0
fi

echo "Error: Invalid command"
help
exit 1
